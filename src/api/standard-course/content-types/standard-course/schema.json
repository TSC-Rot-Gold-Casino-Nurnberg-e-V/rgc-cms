{
  "kind": "singleType",
  "collectionName": "standard_courses",
  "info": {
    "singularName": "standard-course",
    "pluralName": "standard-courses",
    "displayName": "StandardCourse"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "customField": "plugin::ckeditor.CKEditor"
    },
    "schedule": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "standard"
      },
      "required": true,
      "customField": "plugin::ckeditor.CKEditor"
    },
    "trainers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::trainer.trainer"
    }
  }
}
